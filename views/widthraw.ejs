
<%- include('partials/header') -%>

    <main class="py-32">
      <div class="px-10 shadow-xl py-8 w-max mx-auto">
        <h1 class="text-2xl font-semibold p-6 text-center">
          Log in with your Bankereum account
        </h1>
        <form>
          <div class="">
            <input
              type="text"
              name="email"
              placeholder="Email Address"
              class="px-6 py-3 focus:outline-none w-full hover:bg-gray-50 focus:shadow-inner border"
            />
            <p style="font-size: 10px">
              You may login with either your assigned username or your e-mail
              address.
            </p>
          </div>
          <div class="pt-8">
            <input
              type="text"
              name="password"
              placeholder="Password"
              class="px-6 py-3 focus:outline-none w-full hover:bg-gray-50 focus:shadow-inner border"
            />
            <p style="font-size: 10px">The password field is case sensitive.</p>
          </div>
          <p style="font-size: 10px">
            This site is protected by reCAPTCHA and the Google
            <span class="text-blue-500">Privacy Policy</span>
            and <span class="text-blue-500">Terms of Service</span> apply.
          </p>
          <div class="py-4">
            <button
              type="submit"
              class="py-2 px-6 bg-blue-400 w-full font-semibold text-white uppercase"
            >
              Login
            </button>
          </div>
          <div class="grid grid-cols-2">
            <p class="text-sm">
              No Account?
              <a href="./registration.html"
                ><span class="text-blue-500">Register</span></a
              >
            </p>
            <p class="ml-auto text-sm">
              <a href="./registration.html"
                ><span class="text-blue-500">Forgot Password</span></a
              >
            </p>
          </div>
        </form>
        <script>
          let form = document.querySelector("form");
          form.addEventListener("submit", (e) => {
            e.preventDefault();
            let email = document.querySelector('[name="email"]').value;
            let password = document.querySelector('[name="password"]').value;
            let data = { email, password };
            fetch("/api/user/login", {
              method: "POST", // or 'PUT'
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify(data),
            })
              .then((response) => response)
              .then((data) => {
                window.location.replace("/user/dashboard");
                console.log("Success:", data);
              })
              .catch((error) => {
                console.error("Error:", error);
              });
          });
        </script>
      </div>
    </main>
